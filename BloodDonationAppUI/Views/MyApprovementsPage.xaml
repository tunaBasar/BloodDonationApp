<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonationAppUI.Views.MyApprovementsPage"
             BackgroundColor="{StaticResource LightGray}"
             Title="Onay Bekleyen Talepler">

    <Grid RowDefinitions="Auto,*"
          Padding="20">

        <Label Grid.Row="0"
               Text="Onay Bekleyen Talepler"
               Style="{StaticResource HeaderLabel}"
               HorizontalOptions="Center"
               Margin="0,20,0,30"/>

        <ScrollView Grid.Row="1"
                    VerticalOptions="FillAndExpand"
                    Padding="0,10">
            <CollectionView x:Name="ApprovalRequestsListView"
                            VerticalOptions="FillAndExpand"
                            ItemsLayout="VerticalList"
                            SelectionMode="None"
                            ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5,8">
                            <Frame BackgroundColor="White"
                                   Padding="20"
                                   Margin="0"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   HeightRequest="160">

                                <Grid RowDefinitions="Auto,Auto,Auto,*"
                                      ColumnDefinitions="*,Auto,Auto">
                                    <HorizontalStackLayout Grid.Row="0"
                                                           Grid.Column="0"
                                                           Grid.ColumnSpan="3"
                                                           Spacing="15"
                                                           VerticalOptions="Start">
                                        <Label Text="Talep Eden:"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondary}"/>
                                        <Label Text="{Binding RequesterTc}"
                                               FontSize="16"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding ApprovementId}"
                                               IsVisible="False"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="1"
                                                           Grid.Column="0"
                                                           Grid.ColumnSpan="3"
                                                           Spacing="15"
                                                           Margin="0,5,0,0">
                                        <Label Text="DonÃ¶r:"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondary}"/>
                                        <Label Text="{Binding UserDonorTc}"
                                               FontSize="16"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontAttributes="Bold"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="2"
                                                           Grid.Column="0"
                                                           Grid.ColumnSpan="3"
                                                           Spacing="20"
                                                           Margin="0,8,0,0">
                                        <Frame BackgroundColor="{StaticResource Warning}"
                                               CornerRadius="12"
                                               HasShadow="False"
                                               Padding="8,4"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding Status}"
                                                   TextColor="White"
                                                   FontSize="12"
                                                   FontAttributes="Bold"/>
                                        </Frame>
                                    </HorizontalStackLayout>
                                    <Button Text="Onayla"
                                            BackgroundColor="{StaticResource Success}"
                                            TextColor="White"
                                            CornerRadius="20"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Padding="15,8"
                                            HeightRequest="35"
                                            WidthRequest="80"
                                            HorizontalOptions="End"
                                            VerticalOptions="End"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Clicked="OnApproveClicked"/>

                                    <Button Text="Reddet"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            CornerRadius="20"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Padding="15,8"
                                            HeightRequest="35"
                                            WidthRequest="80"
                                            HorizontalOptions="End"
                                            VerticalOptions="End"
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Clicked="OnRejectClicked"/>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>

</ContentPage>