<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonationAppUI.Views.MyRequestsPage"
             BackgroundColor="{StaticResource LightGray}"
             Title="Taleplerimi Gör">

    <Grid RowDefinitions="Auto,*"
          Padding="20">
        <Label Grid.Row="0"
               Text="Bağış Taleplerimin"
               Style="{StaticResource HeaderLabel}"
               HorizontalOptions="Center"
               Margin="0,20,0,30"/>
        <ScrollView Grid.Row="1"
                    VerticalOptions="FillAndExpand"
                    Padding="0,10">
            <CollectionView x:Name="MyRequestsListView"
                           VerticalOptions="FillAndExpand"
                           ItemsLayout="VerticalList"
                           SelectionMode="None"
                           ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5,8">
                            <Frame BackgroundColor="White"
                                   Padding="20"
                                   Margin="0"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   HeightRequest="140">
                                  
                                <Grid RowDefinitions="Auto,Auto,*"
                                      ColumnDefinitions="*,Auto,Auto">

                                    <!-- Üst Satır: TC ve Kan Grubu -->
                                    <HorizontalStackLayout Grid.Row="0"
                                                         Grid.Column="0"
                                                         Grid.ColumnSpan="2"
                                                         Spacing="15"
                                                         VerticalOptions="Start">
                                        <Label Text="{Binding Tc}"
                                               FontSize="16"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontAttributes="Bold"/>
                                        
                                        <Frame BackgroundColor="{StaticResource Primary}"
                                               CornerRadius="12"
                                               HasShadow="False"
                                               Padding="8,4"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding BloodType}"
                                                   TextColor="White"
                                                   FontSize="14"
                                                   FontAttributes="Bold"/>
                                        </Frame>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="1"
                                                         Grid.Column="0"
                                                         Grid.ColumnSpan="2"
                                                         Spacing="20"
                                                         Margin="0,8,0,0">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="📍"
                                                   FontSize="14"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding City}"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="14"/>
                                        </HorizontalStackLayout>
                                        
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="⚡"
                                                   FontSize="14"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding UrgencyLevel}"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="14"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>

                                    <!-- Alt Satır: Durum -->
                                    <HorizontalStackLayout Grid.Row="2"
                                                         Grid.Column="0"
                                                         Spacing="5"
                                                         VerticalOptions="End">
                                        <Ellipse Fill="{StaticResource Success}"
                                                 WidthRequest="8"
                                                 HeightRequest="8"
                                                 VerticalOptions="Center"/>
                                        <Label Text="{Binding IsActive}"
                                               TextColor="{StaticResource Success}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <!-- Düzenle Butonu -->
                                    <Button Text="Düzenle"
                                            BackgroundColor="{StaticResource Secondary}"
                                            TextColor="White"
                                            CornerRadius="20"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Padding="15,8"
                                            HeightRequest="35"
                                            WidthRequest="80"
                                            HorizontalOptions="End"
                                            VerticalOptions="End"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Clicked="OnEditClicked"/>

                                    <!-- Sil Butonu -->
                                    <Button Text="Sil"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            CornerRadius="20"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Padding="15,8"
                                            HeightRequest="35"
                                            WidthRequest="60"
                                            HorizontalOptions="End"
                                            VerticalOptions="End"
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Clicked="OnDeleteClicked"/>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>

</ContentPage>